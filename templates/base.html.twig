<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <!--Let browser know website is optimized for mobile-->
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
        <title>{% block title %}Accueil - START | Centre de Gaming et de Loisirs{% endblock %}</title>
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
        <!-- Google Fonts Roboto -->
        <!-- Google Icons -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
        <!-- Bootstrap core CSS -->
        <link rel="stylesheet" href="{{ asset('utils/mdbootstrap/css/bootstrap.min.css') }}">
        <!-- Material Design Bootstrap -->
        <link rel="stylesheet" href="{{ asset('utils/mdbootstrap/css/mdb.min.css') }}">

        {% block stylesheets %}{% endblock %}

        <!-- custom css -->
        <link type="text/css" rel="stylesheet" href="{{ asset('css/custom.css') }}"/>
    </head>
    <body id="body">
        <a id="st-sticky-scroll" class="py-2 px-3 st-p-bg-color-d position-fixed"><i class="fas fa-angle-up text-white"></i></a>

        <!-- infos bar -->
        {{ render(controller( 'App\\Controller\\HomeController::siteInfosBar')) }}
        <!-- infos bar -->

        <!--Navbar-->
        {{ render(controller( 'App\\Controller\\HomeController::siteNavBar')) }}
        <!--Navbar-->
        
        {% block body %}{% endblock %}
        
        {# newsletter #}
        {{ render(controller('App\\Controller\\HomeController::newsletterForm')) }}
        {# newsletter #}
        
        {# footer #}
        {{ render(controller('App\\Controller\\HomeController::siteFooter')) }}
        {# end footer #}

         <!-- jQuery -->
        <script type="text/javascript" src="{{ asset('utils/mdbootstrap/js/jquery.min.js') }}"></script>
        <!-- Bootstrap tooltips -->
        <script type="text/javascript" src="{{ asset('utils/mdbootstrap/js/popper.min.js') }}"></script>
        <!-- Bootstrap core JavaScript -->
        <script type="text/javascript" src="{{ asset('utils/mdbootstrap/js/bootstrap.min.js') }}"></script>
        <!-- MDB core JavaScript -->
        <script type="text/javascript" src="{{ asset('utils/mdbootstrap/js/mdb.min.js') }}"></script>
        <!-- simpleParallax -->
        <script type="text/javascript" src="{{ asset('utils/simpleParallax/simpleParallax.min.js') }}"></script>
        <!-- custom js -->
        <script src="{{ asset('js/custom.js') }}" type="text/javascript"></script>
        <script type="text/javascript">
        try{
            $('#form-newsletter').submit(function(event){
                event.preventDefault();
                $data = $(this).serialize();
                $('#nsltModal .modal-body').html('Enregistrement...');
                $('#nsltModal').modal('show');

                $.ajax({
                    url: '{{ path("newsletter_save") }}',
                    type: 'POST',
                    data: $data,
                    success: function(result){
                        $('#nsltModal .modal-body').html(result.message);
                    },
                    error: function(result){
                        $('#nsltModal .modal-body').html(result.message);
                    }
                });
            });
        }catch(e){}
        </script>
        {% block javascripts %}{% endblock %}
    </body>
</html>

{% extends 'base.html.twig' %}

{% block stylesheets %}
    <!-- Animation Css -->
    <link href="{{ asset('utils/plugins/animate-css/animate.css') }}" rel="stylesheet" />

    <!-- Bootstrap Material Datetime Picker Css -->
    <link href="{{ asset('utils/plugins/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css') }}" rel="stylesheet" />

    <!-- Bootstrap DatePicker Css -->
    <link href="{{ asset('utils/plugins/bootstrap-datepicker/css/bootstrap-datepicker.css') }}" rel="stylesheet" />

    <!-- Wait Me Css -->
    <link href="{{ asset('utils/plugins/waitme/waitMe.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div id="st-services">
        <header>
            {# service banner #}
            <section class="st-plx container-fluid st-parallax-container">
                <div class="st-parallax-body view">
                    <img class="st-parallax img-fluid" src="{{ vich_uploader_asset(config, 'bannerFile') }}" alt="Bannière">
                    <div class="mask rgba-black-strong"></div>
                    <div class="st-parallax-content d-flex align-items-center justify-content-center text-center mx-auto w-75">
                        <h3 class="sv-name h3-responsive text-uppercase st-font my-2 my-xs-5 text-white">{{ formule.intro|raw }}</h3>
                    </div>
                </div>
            </section>
            {# service banner #}
        </header>
        
        {% for flashMsg in app.flashes('reservation_msg') %}
        <div class="my-3 mx-auto col-sm-6">
            <div class="alert alert-dark alert-dismissible fade show" role="alert">
                {{ flashMsg|raw }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        {% endfor %}

        <!--Main Layout-->
        <main id="services-content" class="py-5">
            <section class="service">
                <div class="container">
                    <div class="row z-depth-1">
                        <div class="sv-desc col-xs-12 col-sm-12 col-md-6">
                            <div class="card-body">
                                <h4 class="sv-title card-title h4-responsive text-center st-font st-p-color-d py-2">
                                    <i class="quote fas fa-quote-left st-p-color-d mr-2"></i>{{ formule.name|raw }}
                                </h4>
                                <div class="text-center my-2"><span class="badge badge-primary p-3">{{ formule.price|format_currency('XAF', locale='cm') }}</span></div>
                                <ul class="list-group list-group-flush py-2">
                                {% for bonus in formule.bonus|filter(b => b.active)|sort((a, b) => a.sequence <=> b.sequence) %}
                                    <li class="list-group-item"><i class="mr-3 {{ bonus.icon }}"></i> {{ bonus.name }}</li>
                                {% endfor %}
                                </ul>
                                <div class="py-4">
                                    {{ formule.text|raw }}
                                </div>
                            </div>
                            <div class="card-body py-2">
                                <button type="button" class="btn st-cstm-btn my-0 card-link px-5 waves-effect waves-light card-link" data-toggle="modal" data-target="#stModalResev">Je reserve
                                </button>
                            </div>
                        </div>
                        <div class="sv-img col-xs-12 col-sm-12 col-md-6 p-0">
                            <div class="view zoom">
                                <img src="{{ vich_uploader_asset(formule, 'bgImageFile') }}" class="img-fluid w-100" alt="{{ formule.name }}">
                            </div>
                        </div>
                    </div>
                </div>
                <!-- reserve modal -->
                <div class="modal fade" id="stModalResev" tabindex="-1" role="dialog" aria-labelledby="START" aria-modal="true">
                    <div class="modal-dialog cascading-modal" role="document">
                        <!--Content-->
                        <div class="modal-content">
                            <!--Modal cascading tabs-->
                            <div class="modal-c-tabs">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs md-tabs tabs-2 light-blue darken-3" role="tablist">
                                    {% if formule.canReserve %}
                                    <li class="nav-item waves-effect waves-light">
                                        <a class="nav-link active" data-toggle="tab" href="#panel17" role="tab" aria-selected="true">
                                            <i class="fas fa-cocktail mr-1"></i></i> Réservation</a>
                                    </li>
                                    {% endif %}
                                    <li class="nav-item waves-effect waves-light">
                                        <a class="nav-link" data-toggle="tab" href="#panel18" role="tab" aria-selected="false">
                                            <i class="fas fa-phone-alt mr-1"></i></i> Contact</a>
                                    </li>
                                </ul>

                                {# Tab panel #}
                                <div class="tab-content pt-0">
                                    {# Panel #}
                                    {% if formule.canReserve %}
                                    <div class="tab-pane fade in active show" id="panel17" role="tabpanel">
                                        <!--Body-->
                                        <div class="modal-body mb-1">
                                        {{ form_start(form) }}
                                            <div class="md-form form-sm">
                                                <i class="fas fa-user prefix"></i>
                                                {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                                {{ form_label(form.name) }}
                                                {{ form_errors(form.name) }}
                                            </div> 
                                            <div class="md-form form-sm">
                                                <i class="fas fa-calendar-alt prefix st-cstm-date-prefix"></i>
                                                {{ form_widget(form.date, {'attr': {'class': 'form-control form-control-sm datepicker'}}) }}
                                                {{ form_label(form.date, null, {'label_attr': {'class': 'st-cstm-date-label'}}) }}
                                                {{ form_errors(form.date) }}
                                            </div>
                                            <div class="md-form form-sm">
                                                <i class="fas fa-clock prefix"></i>
                                                {{ form_widget(form.hour, {'attr': {'class': 'form-control form-control-sm timepicker'}}) }}
                                                {{ form_label(form.hour) }}
                                                {{ form_errors(form.hour) }}
                                            </div>
                                            <div class="md-form form-sm">
                                                <i class="fas fa-stopwatch prefix"></i>
                                                {{ form_widget(form.duration) }}
                                                {{ form_label(form.duration) }}
                                                {{ form_errors(form.duration) }}
                                            </div>
                                            <div class="md-form form-sm mb-5">
                                                <div class="row pl-3">
                                                    <i class="fas fa-gamepad prefix active"></i>
                                                    <span class="ml-4 py-2 pl-3">Console:</span>
                                                </div>
                                                <div class="row px-5" id="consoles">
                                                    {% for console in form.console %}
                                                    <div class="custom-control custom-radio col-xs-12 col-sm-6">
                                                        {{ form_widget(console, {'attr': {'class': 'console custom-control-input'}}) }}
                                                        {{ form_label(console, null, {'label_attr': {'class': 'custom-control-label'}}) }}
                                                    </div>
                                                    {% endfor %}
                                                    {{ form_errors(form.console) }}
                                                </div>
                                            </div>
                                            <div class="md-form form-sm mb-5">
                                                <div class="row pl-3">
                                                    <i class="fas fa-desktop prefix active"></i>
                                                    <span class="ml-4 py-2 pl-3">Ecran :</span>
                                                </div>
                                                <div class="row px-5" id="screens">
                                                    {% for screen in form.screen %}
                                                    <div class="custom-control custom-radio col-xs-12 col-sm-6">
                                                        {{ form_widget(screen) }}
                                                        {{ form_label(screen, null, {'label_attr': {'class': 'custom-control-label'}}) }}
                                                    </div>
                                                    {% endfor %}
                                                    {{ form_errors(form.screen) }}
                                                   </div>
                                            </div>
                                            <div class="md-form form-sm">
                                                <i class="fas fa-mobile-alt prefix"></i>
                                                {{ form_widget(form.phone, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                                {{ form_label(form.phone) }}
                                                {{ form_errors(form.phone) }}
                                            </div>
                                            <div class="md-form form-sm">
                                                <i class="fas fa-envelope prefix"></i>
                                                {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-sm'}}) }}
                                                {{ form_label(form.email) }}
                                                {{ form_errors(form.email) }}
                                            </div>
                                            <div class="md-form form-sm">
                                                <i class="fas fa-comments prefix"></i>
                                                {{ form_widget(form.message, {'attr': {'class': 'md-textarea form-control'}}) }}
                                                {{ form_label(form.message) }}
                                                {{ form_errors(form.message) }}
                                            </div>
                                            <div class="text-center">
                                                <p class="h6 h6-responsive my-2" id="resev-price"></p>
                                                <p class="h5 h5-responsive my-1">Total: </p>
                                                <p class="h4 h4-responsive my-1 text-success" id="resev-total">{{ formule.price|format_currency('XAF', locale='cm') }}</p>
                                            </div>
                                            
                                            {{ form_rest(form) }}
                                            
                                            <div class="text-center mt-4">
                                                <button type="submit" class="btn blue-gradient waves-effect waves-light">Confirmer</button>
                                            </div>
                                        {{ form_end(form) }}
                                        </div>
                                        <!--Footer-->
                                        <div class="modal-footer text-center">
                                            <button type="button" class="btn btn-outline-dark waves-effect m-auto" data-dismiss="modal">Fermer</button>
                                        </div>
                                    </div>
                                    {% endif %}
                                    {# Panel #}

                                    {# Panel Contact#}
                                    <div class="tab-pane fade {% if not formule.canReserve %}in active show{% endif %}" id="panel18" role="tabpanel">
                                        <div class="modal-body">
                                            <h5 class="text-center my-4">Contactez-nous directement pour votre réservation</h5>
                                            <div class="options text-center">
                                                <ul class="list-unstyled start-infos">
                                                    <li class="my-2"><i class="fas fa-map-marker-alt mx-2"></i> {{ config.localisation|raw }}</li>
                                                    <li class="my-2"><i class="fas fa-phone-alt mx-2"></i> {{ config.contact|raw }}</li>
                                                    <li class="my-2"><i class="fas fa-envelope mx-2"></i> Email: <a href="mailto:{{ config.email }}">{{ config.email }}</a></li>
                                                    <li class="my-2">
                                                    {% for sn in socialNetworks %}
                                                        <a title="{{ sn.name }}" href="{{ sn.url }}" target="_blank" class="btn-floating btn-lg mx-2 waves-effect z-depth-1 rounded-circle white st-p-color-d" type="button" role="button"><i class="{{ sn.icon }}"></i></a>
                                                    {% endfor %}
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="modal-footer text-center">
                                            <button type="button" class="btn btn-outline-dark waves-effect m-auto" data-dismiss="modal">Fermer</button>
                                        </div>
                                    </div>
                                    {# Panel #}
                                </div>
                                {# Tab panel #}
                            </div>
                        </div>
                        <!--/.Content-->
                    </div>
                </div>
                <!-- reserve modal -->
            </section>
        </main>
        <!--Main Layout-->
    </div>
{% endblock %}

{% block javascripts %}
    <!-- Slimscroll Plugin Js -->
    <script type="text/javascript" src="{{ asset('utils/plugins/jquery-slimscroll/jquery.slimscroll.js') }}"></script>
    <!-- Autosize Plugin Js -->
    <script type="text/javascript" src="{{ asset('utils/plugins/autosize/autosize.js') }}"></script>
    <!-- Moment Plugin Js -->
    <script type="text/javascript" src="{{ asset('utils/plugins/momentjs/moment.js') }}"></script>
    <!-- Bootstrap Material Datetime Picker Plugin Js -->
    <script type="text/javascript" src="{{ asset('utils/plugins/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js') }}"></script>

    <!-- Bootstrap Datepicker Plugin Js -->
    <script type="text/javascript" src="{{ asset('utils/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('js/basic-form-elements.js') }}" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            var computeReserv = function () {
                var frais = {{ formule.fees? formule.fees : 0 }};
                var subTotal = Number.parseInt(document.querySelector('#screens input.screen:checked').getAttribute('data-price')) * $('#reservation_form_duration').val();
                var total = subTotal + frais;
                
                {% if formule.fees %}
                $('#resev-price').html("Montant: " + Number(subTotal).toLocaleString() + " FCFA + " + Number(frais).toLocaleString() + " FCFA (Frais réservation)");
                {% else %}
                $('#resev-price').html("Montant: " + Number(subTotal).toLocaleString() + " FCFA");
                {% endif %}
                    
                $('#resev-total').html("<span class='badge badge-success p-2'>" + Number(total).toLocaleString() + " FCFA</span>");
            };
            
            $('#reservation_form_duration, input.console, input.screen').change(function () {
                try{ computeReserv(); }
                catch(e){};
            });
        });
    </script>
{% endblock %}
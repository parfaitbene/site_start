<section id="st-contact" class="py-5">
    <div class="container">
        <h1 class="h1-responsive text-uppercase font-weight-bold st-font text-center mb-5">{{ config.contactFormTitle|raw }}</h1>
        <div class="row z-depth-1 rounded">
            <div class="row c-content d-flex grey lighten-4 align-items-center border border-rounded m-0" style="width: 100%;">
                {% if config.siteMap %}
                <div id="st-map-container" class="col-xs-12 col-sm-6 mx-auto p-0" style="width: 100%;">
                    {{ config.siteMap|raw }}
                </div>
                {% endif %}
                <div class="col-xs-12 col-sm-6 mx-auto text-black">
                    {{ form_start(form, {'method': 'POST', 'action': url('contact'), 'attr': {'id': 'st-contact-form', 'class': 'col-xs-12'}}) }}
                        <div class="st-contact-card">
                            <div class="mx-2 p-4">
                                <div class="st-c-body">
                                    {{ form_errors(form) }}
                                    <div class="card-text text-justify">{{ config.contactFormText|raw }}</div>
                                    <!-- Body -->
                                    <div class="md-form">
                                        <i class="fas fa-user prefix st-p-color-d"></i>
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'autocomplete': 'username'}}) }}
                                        {{ form_label(form.name) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                    <div class="md-form">
                                        <i class="fas fa-envelope prefix st-p-color-d"></i>
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_label(form.email) }}
                                        {{ form_errors(form.email) }}
                                    </div>
                                    <div class="md-form">
                                        <i class="fas fa-tag prefix st-p-color-d"></i>
                                        {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_label(form.subject) }}
                                        {{ form_errors(form.subject) }}
                                    </div>
                                    <div class="md-form">
                                        <i class="fas fa-pencil-alt prefix st-p-color-d"></i>
                                        {{ form_widget(form.message, {'attr': {'class': 'form-control md-textarea', 'rows': 3}}) }}
                                        {{ form_label(form.message) }}
                                        {{ form_errors(form.message) }}
                                    </div>
                                    <div class="custom-control custom-checkbox">
                                        {{ form_widget(form.hasCopy, {'attr': {'class': 'custom-control-input'}}) }}
                                        {{ form_label(form.hasCopy, null, {'label_attr': {'class': 'custom-control-label'}}) }}
                                        {{ form_errors(form.hasCopy) }}
                                    </div>

                                    {{  form_rest(form) }}

                                    <!-- Button -->
                                    <div class="text-center">
                                        <button type="submit" class="btn st-cstm-btn"><i class="fas fa-paper-plane"></i> Envoyer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
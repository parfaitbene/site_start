{% block javascripts %}
    <script src="{{ asset('utils/swiper/swiper-bundle.min.js') }}"></script>
    <script src="{{ asset('js/partners.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        var galleryThumbs = new Swiper('#event-detail-content .gallery-thumbs', {
          spaceBetween: 10,
          slidesPerView: 4,
          freeMode: true,
          watchSlidesVisibility: true,
          watchSlidesProgress: true,
          loop: true,
        });
        var galleryTop = new Swiper('#event-detail-content .gallery-top', {
            loop: true,
          spaceBetween: 10,
          navigation: {
            nextEl: '#event-detail-content .swiper-button-next',
            prevEl: '#event-detail-content .swiper-button-prev',
          },
          thumbs: {
            swiper: galleryThumbs
